{
  "name": "trains-commute-optimizer",
  "version": "1.0.0",
  "description": "Train commute optimizer with modern web UI",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "uv run uvicorn app:app --reload",
    "dev:frontend": "cd web && npm run dev",
    "setup": "uv sync && cd web && npm install",
    "build": "cd web && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}